   		<record id="email_template_student_report" model="email.template">
            <field name="name">Student Report - Send by Email</field>
            <field name="email_from">${user.company_id.email}</field>
            <field name="subject">Student Report</field>
            <field name="partner_to"></field>
            <field name="model_id" ref="firedirect.model_firedirect_form_report"/>
            <field name="report_template" ref="report_firedirect_form"/>
            <field name="auto_delete" eval="True"/>
            <field name="report_name">Student_${(object.employee or '').replace('/','_')}</field>
            <field name="body_html"><![CDATA[
<div style="font-family: 'Lucica Grande', Ubuntu, Arial, Verdana, sans-serif; font-size: 12px; color: rgb(34, 34, 34); background-color: #FFF; ">

