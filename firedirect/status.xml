<?xml version="1.0"?>
<openerp>
    <data>
    	<!--
    		                                    <t t-foreach="day_reservations" t-as="res">
	                                    <span t-field="res.course_id"/>
                                	</t>

    	-->
    	
    <record id="view_firedirect_room_report_search" model="ir.ui.view">
        <field name="name">firedirect.room.report.search</field>
        <field name="model">firedirect.room</field>
        <field name="arch" type="xml">
            <search string="Room Filter">
            	
                <field name="name"/>
                <field name="area_id"/>
                <field name="at"/>
<!--                <group expand="1" string="Availability">
                    <filter string="Available" domain="[('is_free','=',True)]" />
                    <filter string="Not Available" domain="[('is_free','=',False)]" />
                </group>-->
            </search>
        </field>
    </record>

    	
    	
    	
    	<record model="ir.ui.view" id="view_firedirect_room_kanban">
            <field name="name">firedirect.room.kanban</field>
            <field name="model">firedirect.room</field>
            <field name="arch" type="xml">
                <kanban create="false" edit="false">
                    <templates>
			        	<style>.oe_header_row{display: none;}</style>
                        <t t-name="kanban-box">
                            <div
                                    t-attf-class="oe_semantic_html_override
                                                  oe_kanban_card {{record.group_fancy==1 ? 'oe_kanban_card_fancy' : ''}}">
                                <div t-attf-class="oe_kanban_content">
                                    <!-- title -->
                                    <strong>Room Name/No.:</strong>
                                    <field name="name"/> / <field name="number"/> 
                                    <br/>
                                    <strong>Room Capacity:</strong>
                                    <field name="capacity"/>
                                    <br/>
                                    <strong>Course Name:</strong>
                                    <field name="course_names"/>
                                    <br/>
                                    <strong>Instructor:</strong>
                                    <field name="instructor_names"/>
                                    <br/>
                                    <strong>Reserved Seats:</strong>
                                    <field name="reserved"/>
                                    <br/>
                                    <strong>Available Seats:</strong>
                                    <field name="available"/>
                                    
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <record model="ir.actions.act_window" id="room_status_action">
            <field name="name">Rooms</field>
            <field name="res_model">firedirect.room</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban</field>
        	<field name="search_view_id" ref="view_firedirect_room_report_search"/>
        </record>

        <menuitem id="dashboard_room" name="Rooms" parent="firedirect.courses_status" action="room_status_action" groups="group_course_manager,group_course_booking"/>
        
        
    	<record model="ir.ui.view" id="view_firedirect_instructor_kanban">
            <field name="name">firedirect.instructor.kanban</field>
            <field name="model">hr.employee</field>
            <field name="arch" type="xml">
                <kanban create="false" edit="false">
                    <templates>
                        <t t-name="kanban-box">
								<div t-attf-class="oe_semantic_html_override oe_kanban_card {{record.group_fancy==1 ? 'oe_kanban_card_fancy' : ''}}">
                                <div t-attf-class="oe_kanban_content">
		    	    				<style>.busy-at .oe_tag{display: block;}</style>
                                    <!-- title -->
                                    <strong>Instructor Name:</strong>
                                    <field name="name"/>
                                    <br/>
                                    <strong>Email:</strong>
                                    <field name="work_email"/>
                                    <br/>
                                    <strong>Mobile:</strong>
                                    <field name="work_phone"/>
                                    <br/>
                                    <div class="busy-at">
                                    <strong>Busy At:</strong>
                                    <br/>
                                    <field name="day_reservations"/>
                                    </div>
                                    <strong>Capabilities:</strong>
                                    <field name="course_ids"/>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>


    <record id="view_firedirect_instructor_report_search" model="ir.ui.view">
        <field name="name">firedirect.instructor.report.search</field>
        <field name="model">hr.employee</field>
        <field name="arch" type="xml">
            <search string="Instructor Filter">
            	
                <field name="name"/>
                <field name="course_ids"/>
                <field name="at"/>
<!--                <group expand="1" string="Availability">
                    <filter string="Available" domain="[('is_free','=',True)]" />
                    <filter string="Not Available" domain="[('is_free','=',False)]" />
                </group>-->
            </search>
        </field>
    </record>


        <record model="ir.actions.act_window" id="instructor_status_action">
            <field name="name">Instructors</field>
            <field name="res_model">hr.employee</field>
            <field name="view_type">form</field>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="view_firedirect_instructor_kanban"/>
            <field name="domain">[('job_id','=','Instructor')]</field>
        	<field name="search_view_id" ref="view_firedirect_instructor_report_search"/>
        </record>

        <menuitem id="dashboard_instructor" name="Instructors" parent="firedirect.courses_status" action="instructor_status_action" groups="group_course_manager,group_course_attendance,group_course_booking" icon="terp-graph"/>


        

    </data>
</openerp>