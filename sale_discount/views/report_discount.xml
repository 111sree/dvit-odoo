<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
	<template priority="999" id="sale_discount_report" inherit_id="sale.report_saleorder_document">
		<xpath expr="//th[@groups='sale.group_discount_per_so_line']" position="before">
			<th   groups="sale.group_discount_per_so_line" >Total</th>
			<th  class="text-right" groups="sale.group_discount_per_so_line" >Disc.</th>
		</xpath>
		<xpath expr="//td[@groups='sale.group_discount_per_so_line']" position="before">
			 <td   groups="sale.group_discount_per_so_line"> 
			 	<span t-field="l.total_line"/></td>
 			<td  t-if="o.disc_total != 1.0" class="text-right" groups="sale.group_discount_per_so_line" > 
				<span t-field="l.disc_line"/></td>		
 		</xpath>
 		<xpath expr="//table//tr[@class='border-black']" position="before">
 			<tr class="border-black"  groups="sale.group_discount_per_so_line" >
                  <td> Total Before Discount </td>
                  <td class="text-right"><span t-field="o.total_b4_disc" /> </td>
             </tr>
            <tr  groups="sale.group_discount_per_so_line" >
                  <td> Total Discount</td>
                  <td class="text-right"><span t-field="o.disc_total" /> </td>
            </tr>
 		</xpath>
	</template>
	</data>
</openerp>


