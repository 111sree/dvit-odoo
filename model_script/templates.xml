<openerp>
    <data>
        <record id="model_script_form" model="ir.ui.view">
            <field name="name">Model Script Form</field>
            <field name="model">model.script</field>
            <field name="arch" type="xml">
                <form string="Command Panel">
                    <header>
                        <button name="cmd_execute" string="Run" class="oe_highlight" type="object"/>
                    </header>
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="desc"/>
                            <field name="command"/>
                            <field name="command_args"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>
        <record id="model_script_tree" model="ir.ui.view">
            <field name="name">Model Script Tree</field>
            <field name="model">model.script</field>
            <field name="arch" type="xml">
                <tree string="">
                    <field name="name"/>
                    <field name="desc"/>
                    <field name="command"/>
                    <field name="command_args"/>
                    <button name="cmd_execute" string="Run" type="object" class="oe_highlight"/>
                </tree>
            </field>
        </record>
        <record id="model_script_action" model="ir.actions.act_window">
            <field name="name">Commands Panel</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">model.script</field>
