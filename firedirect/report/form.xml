<openerp>
<data>
	
    <record id="paperformat_a5" model="report.paperformat">
        <field name="name">European A5</field>
        <field name="default" eval="False" />
        <field name="format">A5</field>
        <field name="page_height">0</field>
        <field name="page_width">0</field>
        <field name="orientation">Portrait</field>
        <field name="margin_top">40</field>
        <field name="margin_bottom">23</field>
        <field name="margin_left">7</field>
        <field name="margin_right">7</field>
        <field name="header_line" eval="False" />
        <field name="header_spacing">35</field>
        <field name="dpi">90</field>
    </record>

    <report
        id="report_firedirect_form"
        model="firedirect.form.report"
        string="Student Report"
        name="firedirect.report_form_view"
        file="firedirect.report_form_view"
        report_type="qweb-pdf" />
	<record id="report_firedirect_form" model="ir.actions.report.xml">
	    <field name="paperformat_id" ref="report.paperformat_euro"/>
	</record>
    <report
        id="report_firedirect_forma5"
        model="firedirect.form.report"
        string="Student Report"
        name="firedirect.report_form_viewa5"
        file="firedirect.report_form_viewa5"
        report_type="qweb-pdf" />
		<record id="report_firedirect_forma5" model="ir.actions.report.xml">
		    <field name="paperformat_id" ref="paperformat_a5"/>
		</record>
			    <template id="report_form_view">
			        <t t-call="report.html_container">
			            <t t-foreach="docs" t-as="doc">
			                <t t-call="report.external_layout">
			                    <div class="page">
			                    	
                    	        	<h1 class="text-center">Report</h1>
			        	<div class="pull-right">
			        		<strong>Date Of Report: <span t-field="doc.report_date"/></strong>
			        	</div>
			        	<div>
			            <strong>Company:</strong> <span t-field="doc.company"/>
			            </div>
			            <div>
			            <strong>ATT:</strong> <span t-field="doc.att"/>
			            </div>
			            <div>
			            <strong>Subject:</strong> Student Report
			            </div>
			            <div>
			            <strong>Course:</strong> <span t-field="doc.course_id"/>
			            </div>
			            <div>
			            <strong>Couse Date:</strong> <span t-field="doc.start_date"/> to <span t-field="doc.end_date"/>
			            </div>
			            <div>
			            <strong>Dear Sir:</strong>
			            </div>
			            <p>
			            Please be informed that your employee: <span t-field="doc.employee"/> ID #:<span t-field="doc.employee_no"/> was booked for <span t-field="doc.booked_for"/> class <span t-field="doc.start_date"/> to <span t-field="doc.end_date"/>  a course of <span t-field="doc.duration"/> duration. He attended <span t-field="doc.attended" /> and failed, show up for the remaining <span t-field="doc.failed"/> of the course.
			            </p>
			            <p>
						For this reason he is deemed to have failed, Consequently no certificate can be issued.
						</p>
						<p></p>
						Regards,  <br/>
						Paul.J.Simkin<br/>
						General Manager <br/>
						fire DIRECT<br/>

                    	
                    	
					</div>
                </t>
            </t>
        </t>
    </template>

