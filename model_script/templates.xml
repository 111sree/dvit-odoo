        <menuitem id="commands_panel_categ" name="Model Script" parent="base.menu_administration" sequence="2"/>
        <menuitem id="dvit_commands_panel_action_menu" parent="commands_panel_categ" name="Commands Panel" sequence="10" action="model_script_action"/>
    </data>
</openerp>